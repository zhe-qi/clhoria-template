PORT=9999
LOG_LEVEL=debug

# Postgres configuration / Postgres 配置
# For local development, change "postgres" to "localhost" / 本地开发需要把 postgres 改成 localhost
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/postgres"

# Redis configuration / Redis 配置
# For local development, change "redis" to "localhost" / 本地开发需要把 redis 改成 localhost
REDIS_URL="redis://redis:6379/0"
# Redis cluster mode (optional) / Redis 集群模式（可选）
REDIS_CLUSTER_ENABLED=false
# REDIS_CLUSTER_NODES="127.0.0.1:6380,127.0.0.1:6381,127.0.0.1:6382"

# JWT secret / JWT 密钥
# Run in terminal: openssl rand -base64 32 / 终端执行: openssl rand -base64 32 生成密钥
CLIENT_JWT_SECRET="your-client-jwt-secret"
ADMIN_JWT_SECRET="your-admin-jwt-secret"

# Cloudflare R2 / Cloudflare R2 对象存储
ACCESS_KEY_ID="your-access-key-id"
SECRET_ACCESS_KEY="your-secret-access-key"
ENDPOINT="https://xxxxx.r2.cloudflarestorage.com"
BUCKET_NAME="xxxxx"

# Sentry (optional, ignore if not needed) / Sentry（可选，不需要可忽略此环境变量）
# Self-hosted Sentry setup: see official docs / 自托管 Sentry 参考官网示例
SENTRY_DSN="https://xxxxxx@xxx.ingest.sentry.io/xxxxxx"
