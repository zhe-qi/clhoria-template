{
  "name": "hono-template",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.13.1",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "test -f node_modules/.bin/simple-git-hooks && simple-git-hooks || echo 'simple-git-hooks not found, skipping...'",
    "dev": "tsx watch src/index.ts",
    "start": "cross-env NODE_ENV=production tsx dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "cross-env LOG_LEVEL=silent vitest",
    "build": "cross-env NODE_ENV=production tsdown",
    "generate": "drizzle-kit generate --config drizzle.config.ts",
    "push": "drizzle-kit push",
    "studio": "drizzle-kit studio --config drizzle.config.ts",
    "seed": "tsx migrations/seed/index.ts",
    "sync:permissions": "test -f dist/scripts/sync-permissions.js && node dist/scripts/sync-permissions.js || tsx scripts/sync-permissions.ts",
    "migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@arcjet/inspect": "1.0.0-beta.9",
    "@arcjet/node": "1.0.0-beta.9",
    "@asteasolutions/zod-to-openapi": "^8.0.0",
    "@aws-sdk/client-s3": "^3.857.0",
    "@aws-sdk/s3-request-presigner": "^3.857.0",
    "@bull-board/api": "^6.12.0",
    "@bull-board/hono": "^6.12.0",
    "@hono/node-server": "1.18.0",
    "@hono/node-ws": "^1.2.0",
    "@hono/prometheus": "^1.0.2",
    "@hono/sentry": "^1.2.2",
    "@hono/zod-openapi": "^1.0.2",
    "@node-rs/argon2": "^2.0.2",
    "@scalar/hono-api-reference": "^0.9.13",
    "bullmq": "^5.56.9",
    "casbin": "^5.38.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.8.10",
    "hono-pino": "^0.10.1",
    "hono-rate-limiter": "^0.4.2",
    "iconv-lite": "^0.6.3",
    "ioredis": "5.7.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "postgres": "^3.4.7",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.2.1",
    "stoker": "^1.4.3",
    "uuid": "^11.1.0",
    "zod": "4.0.14"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.0.0",
    "@types/node": "^24.1.0",
    "chalk": "^5.4.1",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "eslint-plugin-format": "^1.0.1",
    "gradient-string": "^3.0.0",
    "lint-staged": "^16.1.2",
    "rolldown": "1.0.0-beta.30",
    "simple-git-hooks": "^2.13.0",
    "tsdown": "^0.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.1-rc",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm lint:fix",
      "bash -c 'pnpm typecheck'"
    ]
  }
}
