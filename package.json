{
  "name": "clhoria-template",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.20.0",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "test -f node_modules/.bin/simple-git-hooks && simple-git-hooks || echo 'simple-git-hooks not found, skipping...'",
    "dev": "tsx watch src/index.ts",
    "start": "cross-env NODE_ENV=production node --trace-warnings dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "cross-env LOG_LEVEL=silent vitest",
    "build": "cross-env NODE_ENV=production tsdown",
    "generate": "drizzle-kit generate --config drizzle.config.ts",
    "push": "drizzle-kit push",
    "studio": "drizzle-kit studio --config drizzle.config.ts",
    "seed": "tsx migrations/seed/index.ts",
    "migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@aws-sdk/client-s3": "^3.925.0",
    "@aws-sdk/s3-request-presigner": "^3.925.0",
    "@cap.js/server": "^4.0.3",
    "@hono/node-server": "1.19.6",
    "@hono/node-ws": "^1.2.0",
    "@hono/sentry": "^1.2.2",
    "@hono/zod-openapi": "^1.1.4",
    "@node-rs/argon2": "^2.0.2",
    "@scalar/hono-api-reference": "^0.9.24",
    "bullmq": "^5.63.0",
    "casbin": "^5.40.0",
    "croner": "^9.1.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.10.4",
    "hono-pino": "^0.10.3",
    "hono-rate-limiter": "^0.4.2",
    "iconv-lite": "^0.7.0",
    "ioredis": "5.8.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "postgres": "^3.4.7",
    "rate-limit-redis": "^4.2.3",
    "type-fest": "^5.2.0",
    "uuid": "^13.0.0",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@types/node": "24.10.0",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.39.1",
    "eslint-plugin-format": "^1.0.2",
    "lint-staged": "^16.2.6",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.16.0",
    "tsx": "^4.20.6",
    "typescript": "5.9.3",
    "vitest": "^4.0.7"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm lint:fix",
      "bash -c 'pnpm typecheck'"
    ]
  }
}
