{
  "name": "hono-template",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.13.0",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "tsx watch src/index.ts",
    "start": "cross-env NODE_ENV=production tsx dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "cross-env LOG_LEVEL=silent vitest",
    "build": "cross-env NODE_ENV=production tsdown",
    "generate": "drizzle-kit generate --config drizzle.config.ts",
    "push": "drizzle-kit push",
    "studio": "drizzle-kit studio --config drizzle.config.ts",
    "generate:model": "tsx scripts/generate/index.ts",
    "seed": "tsx scripts/seed/index.ts",
    "migrate:permissions": "tsx src/scripts/migrate-permissions.ts"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@hono/node-server": "^1.16.0",
    "@hono/zod-openapi": "^0.19.10",
    "@node-rs/argon2": "^2.0.2",
    "@scalar/hono-api-reference": "^0.9.10",
    "casbin": "^5.38.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.0",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.8.5",
    "hono-pino": "^0.9.1",
    "hono-rate-limiter": "^0.4.2",
    "ioredis": "^5.6.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "rate-limit-redis": "^4.2.1",
    "stoker": "^1.4.3",
    "uuid": "^11.1.0",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "@types/node": "^24.0.13",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^1.0.1",
    "rolldown": "1.0.0-beta.27",
    "tsdown": "^0.12.9",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
