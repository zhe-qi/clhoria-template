{
  "name": "clhoria-template",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.28.2",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "start": "cross-env NODE_ENV=production dotenvx run -- node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "cross-env LOG_LEVEL=silent vitest",
    "build": "cross-env NODE_ENV=production vite build",
    "generate": "drizzle-kit generate --config drizzle.config.ts",
    "push": "drizzle-kit push",
    "studio": "drizzle-kit studio --config drizzle.config.ts",
    "seed": "tsx migrations/seed/index.ts",
    "migrate": "drizzle-kit migrate",
    "prepare": "simple-git-hooks",
    "check": "pnpm lint && pnpm typecheck && pnpm test"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "@aws-sdk/client-s3": "^3.981.0",
    "@aws-sdk/s3-request-presigner": "^3.981.0",
    "@cap.js/server": "^4.0.5",
    "@dotenvx/dotenvx": "^1.52.0",
    "@hono/node-server": "1.19.9",
    "@hono/node-ws": "^1.3.0",
    "@hono/sentry": "^1.2.2",
    "@hono/zod-openapi": "^1.2.1",
    "@node-rs/argon2": "^2.0.2",
    "@scalar/hono-api-reference": "^0.9.39",
    "casbin": "^5.48.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "excelize-wasm": "^0.1.1",
    "hono": "^4.11.7",
    "hono-pino": "^0.10.3",
    "hono-rate-limiter": "^0.5.3",
    "iconv-lite": "^0.7.2",
    "ioredis": "5.9.2",
    "pg-boss": "^12.8.0",
    "pino": "^10.3.0",
    "postgres": "^3.4.8",
    "rate-limit-redis": "^4.3.1",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@hono/vite-dev-server": "^0.24.1",
    "@oxc-project/types": "^0.112.0",
    "@types/node": "25.2.0",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "lint-staged": "^16.2.7",
    "magic-string": "^0.30.21",
    "oxc-parser": "^0.112.0",
    "pino-pretty": "^13.1.3",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.21.0",
    "type-fest": "^5.4.3",
    "typescript": "5.9.3",
    "vite": "8.0.0-beta.11",
    "vitest": "^4.0.18"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "bash -c 'pnpm typecheck'"
    ]
  }
}
