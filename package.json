{
  "name": "clhoria-template",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.26.1",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "test -f node_modules/.bin/simple-git-hooks && simple-git-hooks",
    "dev": "vite",
    "start": "cross-env NODE_ENV=production dotenvx run -- node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "cross-env LOG_LEVEL=silent vitest",
    "build": "cross-env NODE_ENV=production vite build",
    "generate": "drizzle-kit generate --config drizzle.config.ts",
    "push": "drizzle-kit push",
    "studio": "drizzle-kit studio --config drizzle.config.ts",
    "seed": "tsx migrations/seed/index.ts",
    "migrate": "drizzle-kit migrate",
    "prepare": "simple-git-hooks",
    "check": "pnpm lint && pnpm typecheck && pnpm test"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.2.0",
    "@aws-sdk/client-s3": "^3.957.0",
    "@aws-sdk/s3-request-presigner": "^3.957.0",
    "@cap.js/server": "^4.0.5",
    "@dotenvx/dotenvx": "^1.51.2",
    "@hono/node-server": "1.19.7",
    "@hono/node-ws": "^1.2.0",
    "@hono/sentry": "^1.2.2",
    "@hono/zod-openapi": "^1.2.0",
    "@node-rs/argon2": "^2.0.2",
    "@scalar/hono-api-reference": "^0.9.30",
    "casbin": "^5.45.1",
    "croner": "^9.1.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.1",
    "hono-pino": "^0.10.3",
    "hono-rate-limiter": "^0.5.1",
    "iconv-lite": "^0.7.1",
    "ioredis": "5.8.2",
    "pg-boss": "^12.5.4",
    "pino": "^10.1.0",
    "postgres": "^3.4.7",
    "rate-limit-redis": "^4.3.1",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@hono/vite-dev-server": "^0.23.0",
    "@types/node": "25.0.3",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "simple-git-hooks": "^2.13.1",
    "type-fest": "^5.3.1",
    "typescript": "5.9.3",
    "vite": "8.0.0-beta.4",
    "vitest": "^4.0.16"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm lint:fix",
      "bash -c 'pnpm typecheck'"
    ]
  }
}
