{
  "name": "clhoria-template",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.30.2",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "start": "dotenvx run -- node dist/index.js",
    "typecheck": "pnpm exec tsgo --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest",
    "build": "vite build",
    "boss": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres pnpm exec pg-boss-dashboard",
    "generate": "bunx --bun drizzle-kit generate --config drizzle.config.ts",
    "push": "bunx --bun drizzle-kit push",
    "studio": "bunx --bun drizzle-kit studio --config drizzle.config.ts",
    "seed": "bun run migrations/seed/index.ts",
    "migrate": "bunx --bun drizzle-kit migrate",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.1",
    "@aws-sdk/client-s3": "^3.998.0",
    "@aws-sdk/s3-request-presigner": "^3.998.0",
    "@cap.js/server": "^4.0.5",
    "@casbin/redis-watcher": "^1.2.0",
    "@dotenvx/dotenvx": "^1.52.0",
    "@hono/node-server": "1.19.9",
    "@hono/node-ws": "^1.3.0",
    "@hono/sentry": "^1.2.2",
    "@hono/zod-openapi": "^1.2.2",
    "@node-rs/argon2": "^2.0.2",
    "@scalar/hono-api-reference": "^0.9.45",
    "casbin": "^5.49.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "effect": "^3.19.19",
    "excelize-wasm": "^0.1.1",
    "hono": "^4.12.2",
    "hono-pino": "^0.10.3",
    "hono-rate-limiter": "^0.5.3",
    "iconv-lite": "^0.7.2",
    "ioredis": "5.9.3",
    "pg-boss": "^12.13.0",
    "pino": "^10.3.1",
    "postgres": "^3.4.8",
    "rate-limit-redis": "^4.3.1",
    "redlock": "5.0.0-beta.2",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.6.1",
    "@clhoria/vite-plugin": "workspace:*",
    "@hono/vite-dev-server": "^0.25.0",
    "@pg-boss/dashboard": "^1.1.0",
    "@types/node": "25.3.1",
    "@typescript/native-preview": "7.0.0-dev.20260223.1",
    "drizzle-kit": "^0.31.9",
    "eslint": "^10.0.2",
    "eslint-plugin-format": "^2.0.1",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "simple-git-hooks": "^2.13.1",
    "type-fest": "^5.4.4",
    "typescript": "5.9.3",
    "vite": "8.0.0-beta.15",
    "vitest": "^4.0.18"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "bash -c 'pnpm typecheck'"
    ]
  }
}
