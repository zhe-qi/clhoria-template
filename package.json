{
  "name": "clhoria-template",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.15.1",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "test -f node_modules/.bin/simple-git-hooks && simple-git-hooks || echo 'simple-git-hooks not found, skipping...'",
    "dev": "tsx watch src/index.ts",
    "start": "cross-env NODE_ENV=production node --trace-warnings dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "cross-env LOG_LEVEL=silent vitest",
    "build": "cross-env NODE_ENV=production tsdown",
    "generate": "drizzle-kit generate --config drizzle.config.ts",
    "push": "drizzle-kit push",
    "studio": "drizzle-kit studio --config drizzle.config.ts",
    "seed": "tsx migrations/seed/index.ts",
    "migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@aws-sdk/client-s3": "^3.882.0",
    "@aws-sdk/s3-request-presigner": "^3.882.0",
    "@bull-board/api": "^6.12.7",
    "@bull-board/hono": "^6.12.7",
    "@cap.js/server": "^3.0.1",
    "@hono/node-server": "1.19.1",
    "@hono/node-ws": "^1.2.0",
    "@hono/sentry": "^1.2.2",
    "@hono/zod-openapi": "^1.1.0",
    "@node-rs/argon2": "^2.0.2",
    "@scalar/hono-api-reference": "^0.9.16",
    "bullmq": "^5.58.5",
    "casbin": "^5.38.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.2",
    "dotenv-expand": "^12.0.3",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.6",
    "hono-pino": "^0.10.2",
    "hono-rate-limiter": "^0.4.2",
    "iconv-lite": "^0.7.0",
    "ioredis": "5.7.0",
    "pino": "^9.9.4",
    "pino-pretty": "^13.1.1",
    "postgres": "^3.4.7",
    "rate-limit-redis": "^4.2.2",
    "stoker": "^2.0.1",
    "uuid": "^11.1.0",
    "zod": "4.1.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.2",
    "@types/node": "^24.3.1",
    "@typescript/native-preview": "7.0.0-dev.20250904.1",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.35.0",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^16.1.6",
    "rolldown": "1.0.0-beta.35",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.14.2",
    "tsx": "^4.20.5",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm lint:fix",
      "bash -c 'pnpm typecheck'"
    ]
  }
}
